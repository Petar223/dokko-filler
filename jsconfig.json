{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "~components/*": ["components/*"],
      "~shared-components/*": ["shared-components/*"],
      "~pages/*": ["pages/*"],
      "~hooks/*": ["hooks/*"],
      "~api/*": ["api/*"],
      "~context/*": ["context/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
